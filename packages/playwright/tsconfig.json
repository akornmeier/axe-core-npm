{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["DOM", "ESNext"],
    "strict": true,
    "pretty": true,
    "sourceMap": true,
    "declaration": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "typeRoots": ["node_modules/@types"]
  },
  "include": ["src", "tests"],
  "exclude": ["node_modules"]
}
